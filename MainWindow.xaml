<Window x:Class="project2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Defection Validate" Height="455" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="365"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border CornerRadius="5" BorderBrush="DarkGray" BorderThickness="2" Background="#FFFAFAFA"
                Padding="10" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <StackPanel>
                <TextBlock Text="TODAY" FontSize="12" FontWeight="Bold" Foreground="Gray" HorizontalAlignment="Center"/>
                <TextBlock x:Name="TodayText" FontSize="20" FontWeight="Bold" Foreground="#2E86C1" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" Height="70">
            <StackPanel Orientation="Horizontal" Margin="5 0 5 0">
                <Border BorderBrush="DarkGray" BorderThickness="2" Width="90" Height="50" Margin="10" CornerRadius="5">
                    <Button Content="샘플 선택" Background="White" BorderBrush="Transparent" FontFamily="Malgun Gothic"
                            FontSize="14" FontWeight="ExtraBold" Foreground="Gray" Click="BtnInput_Click"/>
                </Border>
                <Border BorderBrush="DarkGray" BorderThickness="2" Width="90" Height="50" Margin="10" CornerRadius="5">
                    <Button Content="검사 실행" Background="White" BorderBrush="Transparent" FontFamily="Malgun Gothic"
                            FontSize="14" FontWeight="ExtraBold" Foreground="Gray" Click="BtnOutput_Click"/>
                </Border>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
            <GroupBox Header="Validation Image" BorderBrush="DarkGray" Height="330">
                <Image x:Name="validationImg" Stretch="Uniform" Margin="0 10 0 10"/>
            </GroupBox>
        </StackPanel>

        <GroupBox Grid.Row="1" Grid.Column="1" Header="Defect Analysis" BorderBrush="DarkGray" Height="330" Margin="0 0 5 23">
            <StackPanel>
                <DataGrid x:Name="ResultGrid" AutoGenerateColumns="False" HeadersVisibility="Column" Margin="5"
                          IsReadOnly="True" CanUserAddRows="False" Height="150" VerticalAlignment="Center">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="불량 종류" Binding="{Binding Key}" Width="*"/>
                        <DataGridTextColumn Header="신뢰도 (%)" Binding="{Binding Value}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Margin="10">
                    <TextBlock Text="Run Time (s) : " x:Name="AnalysisTimeText" Margin="5 10 5 10" HorizontalAlignment="Stretch"
                               FontFamily="Malgun Gothic" FontSize="15" FontWeight="ExtraBold" Foreground="Black"/>
                    <TextBlock Text="Source : " x:Name="FileText" Margin="5 10 5 10" HorizontalAlignment="Stretch"
                               FontFamily="Malgun Gothic" FontSize="15" FontWeight="ExtraBold" Foreground="Black"/>
                    <TextBlock Text="Analysis : " x:Name="AnalysisDefectText" Margin="5 10 5 10" HorizontalAlignment="Stretch"
                               FontFamily="Malgun Gothic" FontSize="15" FontWeight="ExtraBold" Foreground="Black"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
